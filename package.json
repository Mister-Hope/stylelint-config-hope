{
  "name": "stylelint-config-hope",
  "version": "11.0.0-beta.0",
  "description": "Shareable config for Stylelint",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "homepage": "https://github.com/Mister-Hope/stylelint-config-hope",
  "bugs": {
    "url": "https://github.com/Mister-Hope/stylelint-config-hope/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/stylelint-config-hope.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "lint": "oxlint --fix --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt",
    "lint:check": "oxlint --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt --check",
    "prepare": "husky",
    "prepublish": "pnpm build",
    "test": "stylelint tests/**/*.scss"
  },
  "dependencies": {
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-order": "^7.0.1"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "nano-staged": "0.9.0",
    "oxfmt": "0.27.0",
    "oxlint": "1.42.0",
    "oxlint-tsgolint": "0.11.4",
    "stylelint": "17.1.0",
    "tsdown": "0.20.1",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "stylelint": "^17.0.0"
  },
  "nano-staged": {
    "**/*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,ts}": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives"
  },
  "packageManager": "pnpm@10.28.2"
}
